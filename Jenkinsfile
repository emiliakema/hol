pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
           
            }
        }
        
         stages {
        stage('build') {
            steps {
                echo 'Hello build'
                sleep 3
            }
        }
             
      stages {
        stage('deploy') {
            steps {
                echo 'Hello deploy'
                sleep 3
            }
        }
          
           stages {
        stage('test') {
            steps {
                echo 'Hello test'
                sleep 3
            }
        }
          
    }
}

